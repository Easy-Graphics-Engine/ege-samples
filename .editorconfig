# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{c,cpp,h,cpp}]
indent_style = space
indent_size = 4

[*.{js}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.lua]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2


